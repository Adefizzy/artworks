<html lang="en">
  <head>
    <meta name="theme-color" content="#55a01c" />
    <meta name="msapplication-navbutton-color" content="#55a01c" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#55a01c" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <link rel="stylesheet" href="/style.css" />
    <title>ArtWorks</title>
  </head>
  <body>
    <nav class="navbar">
      <div class="d-flex justify-content-between container">
        <a class="navbar-brand" href="#">ArtWorks</a>
        <ul class="nav">
          <li class="nav-item">
            <a class="nav-link" href="#">Sign In</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <form
          class="mb-5 mt-5 col-sm-12 col-md-8 mx-auto col-lg-6 "
          id="signup-form"
        >
          <header class="row">
            <div class="col-sm-12 text-center">
              <h4>Sign Up</h4>
            </div>
          </header>
          <footer class="p-1">
            <div
              id="user-selector"
              class=" d-flex justify-content-around text-center mb-3 "
            >
              <div id="art-lover" class="p-2">
                <p>Art lover</p>
              </div>
              <div id="artist" class="p-2 box-shadow">
                <p>Artist</p>
              </div>
            </div>
            <div class="form-group">
              <input
                type="text"
                class="form-control"
                id="inputName"
                placeholder="Name"
                maxlength="20"
                required
              />
            </div>
            <div class="form-group">
              <input
                type="phone"
                class="form-control"
                id="inputPhone"
                placeholder="phone number e.g 080xxxxxxxx"
                maxlength="13"
                required
              />
            </div>
            <div class="form-group">
              <input
                type="email"
                class="form-control"
                id="inputEmail4"
                placeholder="Email"
                required
              />
            </div>
            <div class="form-group">
              <input
                type="password"
                class="form-control"
                id="inputPassword4"
                placeholder="Password"
                maxlength="20"
                required
              />
            </div>
            <div id="more-details">
              <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  id="address"
                  placeholder="Address"
                  required
                />
              </div>
              <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  id="facebook"
                  placeholder="Facebook link"
                  required
                />
              </div>
              <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  id="whatsaap"
                  placeholder="WhatsApp link"
                  required
                />
              </div>
            </div>
            <button id="" type="submit" class="button btn btn-primary w-100">
              Create Account
            </button>
          </footer>
        </form>
      </div>
    </div>
    <div class=" container-fluid ">
      <footer class="row bg-dark h-10">
        <div class=""><h1>Heloo World</h1></div>
      </footer>
    </div>
    <script src="/signup.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="/js/bootstrap.js"></script>
  </body>
</html>
