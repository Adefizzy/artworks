<html lang="en">
  <head>
    <meta name="theme-color" content="#55a01c"/>
    <meta name="msapplication-navbutton-color" content="#55a01c"/>
    <meta name="apple-mobile-web-app-status-bar-style" content="#55a01c"/>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <link rel="stylesheet" href="/style.css" />
    <title>ArtWorks</title>
  </head>
  <body>
    <!-- Modal Begins -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-body">
           <p class="modal-text"></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="button btn" data-dismiss="modal">No</button>
            <form method="POST" id="modal-delete-form">
              <button type="submit" class="button btn" id="modal-delete-button">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal Ends -->
    <nav class="navbar navbar-light">
      <div class="d-flex justify-content-between container">
        <a class="navbar-brand" href="/auth/frontpage">ArtWorks</a>
        <ul id="user" class="nav">
          <li class="nav-item d-flex align-items-center">
            <span><%=username%></span>
            <a class="nav-link" href="#">
              <i class="fa fa-user-circle"></i>
            </a>
          </li>
        </ul>
      </div>
    </nav>
    <aside id="sideBar" class="container pt-5">
      <div class="row mt-3 row-div">
        <div class=" d-flex justify-content-between flex-column">
          <div>
            <div class="col-12 mt-2">
              <a href="/favourite" class="">
                <i class="fa fa-heart pr-2" aria-hidden="true"></i>
                favourites
              </a>
            </div>
            <div class="col-12 mt-3">
              <a href="/viewpost" class="">
                <i class="fa fa-book pr-2" aria-hidden="true"></i>
                View Posts
              </a>
            </div>
            <div class="col-12 mt-3">
              <a href="/postad" class="">
                <i class="fa fa-pencil-square-o pr-2" aria-hidden="true"></i>
                Post Ad
              </a>
            </div>
            <div class="col-12 mt-3">
              <a href="#" class="">
                <i class="fa fa-adjust pr-2" aria-hidden="true"></i>
                Edit Post
              </a>
            </div>
            <div class="col-12 mt-3">
              <a href="#" class="">
                <i class="fa fa-cog pr-2" aria-hidden="true"></i>
                Setting
              </a>
            </div>
          </div>
          <div>
            <div class="col-12 mb-4">
              <a href="/logout" class="">
                <i class="fa fa-sign-out pr-2" aria-hidden="true"></i>
                sign out
              </a>
            </div>
          </div>
        </div>
      </div>
    </aside>
    <div class="container-fluid">
        <h4 class=" text-center text-muted mt-4">Posted Arts</h4>
        <% if (success !== undefined ) {%>
          <div class="alert alert-success col-8 mx-auto" role="alert">
           <p><%=success%></p>
          </div>
        <%}else if(error !== undefined){%>
          <div class="alert alert-danger col-8 mx-auto" role="alert">
            <p><%=error%></p>
          </div>
        <%}%>
        <main class="art-container ">
          <%posts.forEach(post => {%>
             <section class="art-card ">
             <header class="art-header mb-2" id="img1">
               <a href="/auth/artpreview/<%=post._id%>"><img
                 src="<%=post.image%>"
                 class="art-image"
                 alt="<%=post.title%>"
               /></a>
             </header>
             <footer class="art-footer p-0">
              <div class=" d-flex justify-content-between mb-2">
              <div class="">
               <p class="art-name"><%=post.title%></p>
               <p class="text-primary"><%=post.price%></p>
              </div>
               <div class="d-flex justify-content-around flex-column align-self-start text-right mr-2">
                    <p  class="text-right">
                      <i  class="icon fa fa-angle-up" ></i>
                    </p>
                  <div id="" class="hide delete-and-edit" >
                      <small id="" class="text-muted delete-button" data-toggle="modal" data-target="#exampleModal" data-post-id="<%=post._id%>" data-post-title="<%=post.title%>">Delete</small>
                      <small class="text-muted" onclick="window.location.href='/auth/editpost/<%=post._id%>'">Edit</small>
                    </div>
                  </div> 
                  </div>
             </footer>
           </section>
          <%})%>
         </main>
    </div>
    <script src="/postedArts.js"></script>
    <script src="/sideBar.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="/js/bootstrap.js"></script>
  </body>
</html>
