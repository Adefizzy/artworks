<html lang="en">
  <head>
    <meta name="theme-color" content="#55a01c" />
    <meta name="msapplication-navbutton-color" content="#55a01c" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#55a01c" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <link rel="stylesheet" href="/style.css" />

    <title>ArtWorks</title>
  </head>
  <body>
    <nav class="navbar navbar-light">
      <div class="d-flex justify-content-between container">
        <a class="navbar-brand" href="#">ArtWorks</a>
        <ul class="nav">
          <li class="nav-item">
            <a class="nav-link" href="#">Sign Up</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container-fluid">
      <div class="d-flex justify-content-between flex-column h-100">
        <main
          class="row border-secondary d-flex justify-content-center align-items-center h-100"
        >
          <form
            class="mx-2 col-11 col-md-6 col-lg-4 mx-auto py-4"
            id="signin-form"
          >
            <header class="row">
              <div class="col-sm-12 text-center">
                <h4>Sign In</h4>
              </div>
            </header>
            <div class="form-row">
              <div class=" form-group col-sm-12">
                <input
                  type="email"
                  class="form-control"
                  id="inputEmail3"
                  placeholder="Email"
                  required
                />
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-sm-12">
                <input
                  type="password"
                  class="form-control"
                  id="inputPassword3"
                  placeholder="Password"
                  required
                />
              </div>
            </div>
            <div class="form-row">
              <div class="col-sm-12">
                <button
                  id=""
                  type="submit"
                  class="button btn btn-primary w-100"
                >
                  Sign in
                </button>
              </div>
            </div>
            <ul class="col-12 justify-content-between d-flex nav flex-nowrap">
              <li class="nav-item">
                <a class="nav-link" href="#"><small>forgot password?</small></a>
              </li>
            </ul>
          </form>
        </main>
        <footer class="row bg-dark h-10">
          <div class="col-12"><h1>Helo World</h1></div>
        </footer>
      </div>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="/js/bootstrap.js"></script>
  </body>
</html>
